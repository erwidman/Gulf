    <TextView
        android:text="XXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/br_h3"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_alignBaseline="@+id/br_h2"
        android:layout_alignBottom="@+id/br_h2"
        android:layout_toRightOf="@+id/br_h2"
        android:layout_toEndOf="@+id/br_h2" />

    <TextView
        android:text="XXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/br_h4"
        android:layout_alignBaseline="@+id/br_h3"
        android:layout_alignBottom="@+id/br_h3"
        android:layout_toLeftOf="@+id/br_totals"
        android:layout_toStartOf="@+id/br_totals"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <TextView
        android:text="par"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/br_h1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView14" />

    <TextView
        android:text="XXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView14"
